{
	"name": "fiware-requirements",
	"version": "0.0.1",
	"description": "The requirements to be fulfilled by any FIWARE Generic Enabler (GE) as well as the recommended practices for the development of FIWARE GEs",
	"keywords": [
		"node",
		"fiware",
		"tutorials",
		"validator",
		"ngsi"
	],
	"license": "CC-BY-4.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/Fiware/developmentGuidelines"
	},
	"devDependencies": {
		"eslint": "^7.5.0",
		"eslint-config-tamia": "^7.2.5",
		"eslint-plugin-prettier": "^3.1.4",
		"husky": "^4.2.5",
		"lint-staged": "^10.2.11",
		"memfs": "3.2.0",
		"prettier": "^2.0.5",
		"remark-cli": "^8.0.1",
		"remark-preset-lint-recommended": "^4.0.1",
		"textlint": "^11.7.6",
		"textlint-rule-common-misspellings": "^1.0.1",
		"textlint-rule-no-dead-link": "^4.7.0",
		"textlint-rule-terminology": "^2.1.4",
		"textlint-rule-write-good": "^1.6.2"
	},
	"engines": {
		"node": ">=8.6"
	},
	"scripts": {
		"start": "mkdocs serve",
		"precommit": "lint-staged",
		"lint:md": "remark 'README.md' docs",
		"lint:text": "textlint 'README.md' 'docs/*.md' 'docs/**/*.md'",
		"prettier:text": "prettier 'README.md' 'docs/*.md' --tab-width 4 --print-width 80 --write --prose-wrap always",
		"test": "textlint 'README.md' 'docs/*.md'"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.md": [
			"prettier --tab-width 4 --print-width 120 --write --prose-wrap always",
			"git add"
		],
		"*.yml": [
			"prettier --no-config --write",
			"git add"
		]
	}
}
